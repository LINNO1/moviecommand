.movielist {
  width: 100%;
  display: flex;
  font-size: 30rpx;
  border-bottom: 1px solid #ccc;
  margin-bottom: 10px;
}

.movieIamg {
  width: 150rpx;
  height: 200rpx;
}
.movieInfo {
  flex: 1;
  margin-left: 10rpx;
}
.movieTitle {
  font-size: 35rpx;
  color: darkorange;
  font-weight: bold;
}
.rating {
   color: darkorange;
}
.comment {
  width: 130rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 30rpx;
  border: 1rpx solid darkorange;
  border-radius: 15rpx;
  background-color: darkorange;
  color: #ffffff;
  margin-top: 40rpx;
  margin-right: 20rpx;
}